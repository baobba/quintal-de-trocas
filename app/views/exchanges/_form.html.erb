<%= simple_form_for(@exchange) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :item_from %>
    <%= f.input :item_to %>
    <%= f.input :status %>
    <%= f.input :exchange_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
