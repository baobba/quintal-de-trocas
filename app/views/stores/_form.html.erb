<div class="col-sm-6 col-sm-offset-3">
  <%= simple_form_for(@store) do |f| %>
    <%= f.error_notification %>

      <%= f.input :name %>

      <% if !@store.new_record? %>
      <fieldset>
        <legend>Habilitar Pagseguro</legend>

        <%= debug @authorization %><br>
        <% if @authorization && @authorization.permissions.first.status == "APPROVED" %>
          <strong class="text-success">Habilitado</strong>
        <% elsif @authorization_request_link || @authorization %>
          <strong class="text-danger">Desabilitado</strong>
          <%= link_to "Habilitar", @authorization_request_link, class: "btn btn-default" %>
        <% else %>
          <p class="text-danger">Erro de conexÃ£o com Pagseguro</p>
        <% end %>
      </fieldset>
      <% end %>

      <br>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>

